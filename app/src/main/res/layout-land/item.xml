<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_fundo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="20dp">

    <ImageView
        android:id="@+id/item_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/item_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/item_foto"
        android:textColor="#05137e"
        android:textSize="35sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/item_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#484545"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/item_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_telefone"
        android:layout_marginRight="10dp"
        android:textColor="#484545"
        android:textSize="15sp"
        android:textStyle="italic"/>
</RelativeLayout>